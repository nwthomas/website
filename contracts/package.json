    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.6.7",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.4.1",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
