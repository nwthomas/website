{
  "env": {
    "browser": false,
    "mocha": true,
    "node": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "plugin:node/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "es2021": true,
    "ecmaVersion": 12
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "ignores": ["modules"] }
    ]
  }
}
