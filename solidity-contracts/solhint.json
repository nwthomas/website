{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": ["warn", { "maxLength": 50 }],
    "compiler-version": ["error", "^0.8.4"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "quotes": ["warn", "double"],
    "reason-string": "off"
  }
}
